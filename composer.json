{
    "name": "integrated/integrated-standard",
    "license": "MIT",
    "type": "project",
    "description": "Skeleton for a new Integrated based application, which includes the use of all core bundles",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "symfony/symfony": "~2.7.19",
        "doctrine/orm": "~2.5",
        "doctrine/doctrine-bundle": "~1.6",
        "twig/extensions": "~1.4",
        "symfony/assetic-bundle": "~2.8",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.11",
        "sensio/distribution-bundle": "~4.0",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.5",
        "incenteev/composer-parameter-handler": "~2.1",
        "sp/bower-bundle": "~0.11",
        "components/jquery": "~1.10.2",
        "leafo/scssphp": "~0.6",
        "integrated/channel-bundle": "~0.6,<0.7",
        "integrated/content-bundle": "~0.6,<0.7",
        "integrated/library": "~0.6,<0.7",
        "integrated/locking-bundle": "~0.6,<0.7",
        "integrated/menu-bundle": "~0.6,<0.7",
        "integrated/page-bundle": "~0.6,<0.7",
        "integrated/slug-bundle": "~0.6,<0.7",
        "integrated/solr-bundle": "~0.6,<0.7",
        "integrated/storage-bundle": "~0.6,<0.7",
        "integrated/theme-bundle": "~0.6,<0.7",
        "integrated/user-bundle": "~0.6,<0.7",
        "integrated/website-bundle": "~0.6,<0.7",
        "integrated/workflow-bundle": "~0.6,<0.7",
        "integrated/content-history-bundle": "~0.6,<0.7",
        "integrated/puphpet": "~0.4",
        "integrated/image-bundle": "~0.6",
        "integrated/comment-bundle": "~0.6"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "2.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sp\\BowerBundle\\Composer\\ScriptHandler::bowerInstall",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console assetic:dump web",
            "php app/console doctrine:mongodb:schema:create",
            "php app/console doctrine:schema:update --force",
            "php app/console init:queue --force",
            "php app/console init:locking --force",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "php app/console cache:clear --env=prod",
            "php app/console fos:js-routing:dump --env=prod"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sp\\BowerBundle\\Composer\\ScriptHandler::bowerInstall",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Braincrafted\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::install",
            "php app/console braincrafted:bootstrap:install",
            "php app/console assetic:dump web",
            "php app/console doctrine:mongodb:schema:create",
            "php app/console doctrine:schema:update --force",
            "php app/console init:queue --force",
            "php app/console init:locking --force",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "php app/console cache:clear --env=prod",
            "php app/console fos:js-routing:dump --env=prod"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
